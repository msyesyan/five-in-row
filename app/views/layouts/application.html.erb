<!DOCTYPE html>
<html>
  <head>
    <title>FiveInRow</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script> -->
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <% if current_user %>
        <%=  current_user.email %> <%= link_to 'SignOut', destroy_user_session_path, method: :delete %>
      <% end %>
    </div>

    <div class="container-fluid">
      <%= yield %>
    </div>

    <script>
      (function() {
        if (!!<%= current_user.present? %>) {
          window.currentUser = <%= raw current_user.to_json %>;
        }
      })();
    </script>
  </body>
</html>
